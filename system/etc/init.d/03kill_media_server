#!/system/bin/sh
#Kill media server to save battery for Fly-On Mod™ by Slaid480!

#============ Copyright (C) 2015 Salah Abouabdallah(Slaid480)===========#
 
 see <http://www.gnu.org/licenses/>.
 
#=======================================================================#

#Interval between Mediakiller runs, in seconds, 14400=4hours
RUN_EVERY=14400

FLY=/data/Fly-On/04mediakiller.log

busybox rm -f $FLY
busybox touch $FLY

echo "# Fly-On Mod� LOGGING ENGINE" | tee -a $FLY
echo "" | tee -a $FLY
echo "$( date +"%m-%d-%Y %H:%M:%S" ) Media killer service running..." | tee -a $FLY;

killall -9 android.process.media
killall -9 mediaserver

echo "" | tee -a $FLY
echo "$( date +"%m-%d-%Y %H:%M:%S" ) Killing media server is done!" | tee -a $FLY;